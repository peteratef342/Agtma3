<h1>Search</h1>

<%= render 'form',  person: @person %>


<%if @people and @people.count > 0 %>

	<br>
	<br>

	<table border="1">
	  <thead>
	    <tr>
	      <th>الاسم</th>
	      <th>نقاط</th>
	      <th>تليفون</th>
	      <th>الاسرة</th>
	      <th colspan="3"></th>
	    </tr>
	  </thead>

	  <tbody>
	    <% @people.each do |person| %>
	      <tr>
	        <td><%= person.name %></td>
	        <td><%= person.points %></td>
	        <td><%= person.mobile %></td>
	        <td><%= person.family.name %></td>
	        <td><%= link_to 'عرض', person %></td>
	        <td><%= link_to 'تعديل', edit_person_path(person) %></td>
	        <td><%= link_to 'مسح', person, method: :delete, data: { confirm: 'Are you sure?' } %></td>
	      </tr>
	    <% end %>
	  </tbody>
	</table>

	<br>

<%else%>
	
<h2>لا يوجد نتجة للبحث</h2>

<%end%>	