<p id="notice"><%= notice %></p>

<p>
  <strong>الاسم:</strong>
  <%= @person.name %>

  <strong>الاسرة:</strong>
  <%= @person.family.name %>

  <strong>كلية:</strong>
  <%= @person.college.name %>
</p>


<p>
  <strong>الميلاد:</strong>
  <%= @person.birthdate %>

  <strong>تليفون:</strong>
  <%= @person.mobile %>

</p>

<p>  
  <strong>العنوان:</strong>
  <%= @person.address %>

</p>

<p>
  <strong>نقاط:</strong>
  <%= @person.points %>
</p>

<%= link_to 'تعديل', edit_person_path(@person) %> |
<%= link_to 'رجوع', people_path %>


<h2>السجل</h2>

<%= form_for @record, :url => { :controller => "records", :action => "create" }, :html => {:method => :post} do |form| %>
  <div class="field">
    <%= form.label :الحدث %>
    <%= form.collection_select :event_id, Event.order(:date),:id, :name_with_points, include_blank: false %>
   
    <%= form.hidden_field :person_id, value: @person.id %>
    <%= form.submit "اضف" %>

  </div>

<% end %>



<table border="1">
  <thead >
    <tr>
      <th>الحدث</th>
      <th>التاريخ</th>
      <th>النقاط</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <%  @records.each do |record| %>
      <tr>
        <td><%= record.event.name %></td>
        <td><%= record.event.date %></td>
        <td><%= record.points %></td>
        <td><%= link_to 'مسح', record, method: :delete, data: { confirm: 'Are you sure?' } %></td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

<h2>العروض</h2>

<%= form_for @redeem_record, :url => { :controller => "redeem_records", :action => "create" }, :html => {:method => :post} do |form| %>
  <div class="field">
    <%= form.label :العرض %>
    <%= form.collection_select :redeem_item_id, @redeems,:id,:name_with_points, include_blank: false %>
    
    
    <%= form.hidden_field :person_id, value: @person.id %>
    <%= form.submit "اضف" %>

  </div>

<% end %>




<table border="1">
  <thead >
    <tr>
      <th>العرض</th>
      <th>الثمن</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <%  @redeem_records.each do |record| %>
      <tr>
        <td><%= record.redeem_item.name %></td>
        <td><%= record.redeem_item.cost %></td>
        <td><%= link_to 'مسح', record, method: :delete, data: { confirm: 'Are you sure?' } %></td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>
